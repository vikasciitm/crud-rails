<div class="col-lg-12">
	<div class="card rounder-0 m-5">
		<div class="card-body p-5">
			<h1 class="text-center">Student detales.</h1>
			<h3>Id:<%= @student.id%></h3>
			<h3>Name:<%= "#{@student.first_name} #{@student.last_name}"%></h3>
			<h3>Email:<%= @student.email%></h3>
			<h3>Mob:<%= @student.mobile_number%></h3>
			<div class="col-lg-12 m-4">
				<div class="form-group m-4">
					<%= link_to "Back to Student", students_path, class:"btn btn-outline-primary btn-lg"%>
					<%= link_to "Edit Student", edit_student_path(@student.id), class:"btn btn-primary btn-lg"%>
				</div>
			</div>
		</div>
	</div>
	
</div>