<div class="container col-lg-12">
	<div class="card mt-5">
		<h1 class="text-center mt-5 mb-5 text-danger">Student all data</h1>
	</div>
	<div class="row mt-5">
		<div class="col-lg-4">
			<%= link_to "New Student",new_student_path,class:"btn btn-primary"%>
		</div>
	</div>
	<table class="table mt-5">
		<thead class="table-head">
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Email</th>
				<th>Number</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody class="table-body">
			<% @students.each do |student|%>
			<tr>
				<td><%= student.id%></td>
				<td><%= "#{student.first_name} #{student.last_name}"%></td>
				<td><%= student.email%></td>
				<td><%= student.mobile_number%></td>
				<td>
					<%#= link_to "edit", edit_student_path(student)%>
					<div class="btn-group" role="group" aria-label="Basic mixed styles example">
					  <button type="button" class="btn btn-danger"><i class="fa fa-trash btn btn-denger"></i></button>
					  <button type="button" class="btn btn-warning"><a href="/students/<%= student.id%>/edit" name="student[id]"><i class="fa fa-edit btn"></i></a></button>
					  <button type="button" class="btn btn-success"><a href="/students/<%= student.id%>"><i class="fa fa-eye btn btn-success"></i></a></button>
					</div>
					</td>
			</tr>
			<% end%>
		</tbody>
	</table>
</div>