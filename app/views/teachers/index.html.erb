<div class="col-lg-12">
	<div class=" m-4 card d-flex justify-content-center">
		<div class="card-body">
			<h1 class="text-center text-danger">Teachers all Data</h1>
		</div>
	</div>

	<%= link_to "New teacher","/teachers/new",class: "btn btn-lg btn-primary m-3 rounded-0" %>

	<div class="card-body">
		<table class="table">
			<thead>
				<tr>
					<th>#</th>
					<th>Name</th>
					<th>Email</th>
					<th>Subject</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				<% @teachers.each do |data|%>
				<tr>
					<td><%= data.id%></td>
					<td><%= data.name%></td>
					<td><%= data.email%></td>
					<td><%= data.subject%></td>
					<td>
						<%= link_to "Delete"%>
						<%= link_to "View",teacher_path(data),class: "btn btn-warning"%>
						<%= link_to "Edit",edit_teacher_path(data),class: "btn btn-primary"%>
					</td>
				</tr>
				<% end%>
			</tbody>
		</table>
	</div>
</div>